root = true

# Default settings:
# A newline ending every file
[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[{package.json,*.yml}]
indent_style = space
indent_size = 2

# Trailing whitespace is significant in markdown files
[*.md]
trim_trailing_whitespace = false
insert_final_newline = false

[*.{cmd,bat}]
end_of_line = crlf

[*.{sh,bashrc,bash_profile}]
indent_style = space
indent_size = 2
end_of_line = lf

[*.rb]
indent_style = space
indent_size = 2

[Vagrantfile]
indent_style = space
indent_size = 2

[*.xml]
indent_style = space
indent_size = 4

[*.py]
indent_style = space
indent_size = 4

[Dockerfile]
indent_style = space
indent_size = 4
end_of_line = lf
max_line_length = 80

[Makefile]
indent_style = tab
